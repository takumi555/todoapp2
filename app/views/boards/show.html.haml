.container
  .board_head_title
    = @board.title
  - @tasks.each do |task|
    = link_to board_task_path(board_id: task.board_id, id: task.id) do
      .board
        - if task.image&.attached?
          = image_tag task.image, class: 'task_image'
        .board_title
          = task.title
        .clear
        .board_content
          = task.content 
        .board_usericon
          = image_tag task.user.profile.avatar
        .clear
      
  .new_board_link
    = link_to new_board_task_path(@board) do 
      %p.new_board_text + Add new task
