.container 
  %p.new_post_title New Card
  = form_with(model: @task, url: board_tasks_path(@board.id),method: 'post', local: true) do |f|
    %div
      = f.label :image, 'Image', class: 'form_text '
    %div
      = f.file_field :image
    %div
      = f.label :title, 'Title', class: 'form_text '
    %div
      = f.text_field :title, class: 'form'
    %div 
      = f.label :Description, class: 'form_text '
    %div
      = f.text_field :content, class: 'content_form'
    %div 
      = f.label :deadline, class: 'form_text '
    %div
      = f.date_field :deadline, class: 'deadline_form'
    %div
      = f.submit 'Submit', class: 'btn'