編集ページ

= form_with model: @task, url: board_task_path(board_id: @task.board_id,id: @task.id),method: 'put', local: true do |f|
  %div
    = f.label :title, 'Title'
  %div
    = f.text_field :title
  %div
    = f.label :content, 'Description'
  %div
    = f.text_field :content
  %div
    = f.label :deadline, 'deadline'
  %div
    = f.date_field :deadline
  %div
    = f.submit 'Submit', class: 'btn btn-primary'